file = {:C$\backslash$:/Users/brend/Dropbox/Papers/PhD/Fish/Feeding/Hovel2016 - mesopred{\_}foraging{\_}seagrass{\_}density.pdf:pdf},
issn = {0022-0981},
journal = {Journal of Experimental Marine Biology and Ecology},
month = {jan},
pages = {142--147},
publisher = {Elsevier},
title = {{Mesopredator foraging success in eelgrass (Zostera marina L.): Relative effects of epiphytes, shoot density, and prey abundance}},
url = {https://www.sciencedirect.com/science/article/pii/S0022098115300459},
