file = {:C$\backslash$:/Users/brend/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Burkepile, Hay - 2006 - Herbivore vs. nutrient control of marine primary producers Context-dependent effects.pdf:pdf},
journal = {Ecology},
number = {12},
pages = {3128--3139},
title = {{Herbivore vs. nutrient control of marine primary producers: Context-dependent effects}},
url = {http://www.jstor.org/stable/pdf/20069342.pdf?refreqid=excelsior{\%}3A661af8d149c6a372849ce6e8a655f41b},
