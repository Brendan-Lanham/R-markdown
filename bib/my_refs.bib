keywords = {Current flow,Edge distribution,Plankton tube traps,Predictive model,Seagrass.},
number = {2},
pages = {214--218},
title = {{Edge patterns in aquatic invertebrates explained by predictive models}},
volume = {61},
year = {2010}
}
