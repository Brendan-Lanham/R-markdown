issn = {0022-0981},
journal = {Journal of Experimental Marine Biology and Ecology},
month = {dec},
number = {1},
pages = {23--43},
publisher = {Elsevier},
title = {{Thick vs. thin: thallus morphology and tissue mechanics influence differential drag and dislodgement of two co-dominant seaweeds}},
