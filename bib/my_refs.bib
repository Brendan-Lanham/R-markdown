doi = {10.1002/ece3.2499},
file = {:C$\backslash$:/Users/brend/Dropbox/Papers/PhD/Facilitation/Cascades/Thomsen et al. 2016.pdf:pdf},
isbn = {2045-7758},
issn = {20457758},
journal = {Ecology and Evolution},
keywords = {epibiosis,facilitation cascade,indirect facilitation},
number = {22},
pages = {8291--8303},
title = {{A sixth-level habitat cascade increases biodiversity in an intertidal estuary}},
