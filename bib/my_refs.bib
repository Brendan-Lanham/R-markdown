number = {21},
pages = {1828--32},
pmid = {22036178},
publisher = {Elsevier},
title = {{Seaweed communities in retreat from ocean warming.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/22036178},
volume = {21},
year = {2011}
