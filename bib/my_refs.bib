month = {feb},
number = {3-4},
pages = {593--607},
publisher = {Academic Press},
title = {{Food utilisation by coastal fish assemblages in rocky and soft bottoms on the Swedish west coast: Inference for identification of essential fish habitats}},
url = {https://www.sciencedirect.com/science/article/pii/S0272771406004100},
